<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5100FF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AnswerActivity">

    <ImageView
        android:id="@+id/markView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="24dp"
        app:srcCompat="@drawable/correct_image" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="0"
        android:textColor="#9B9B9B"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/yourAnswerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-black"
        android:padding="32dp"
        android:text="0"
        android:textColor="#FFFF"
        android:textSize="64sp" />

    <ImageView
        android:id="@+id/randyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/randy_normal_image" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="320sp"
        android:layout_height="56sp"
        android:layout_margin="32dp"
        android:layout_weight="1"
        android:background="@drawable/background_rounded_courners"
        android:text="もどる"
        android:textSize="24sp" />
</LinearLayout>